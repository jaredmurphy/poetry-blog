<%= form_for(@post, multipart: true) do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>

  <% if @post.image %>
    <img src=<%= @post.image.url %> />
    <br />
  <% end %> 

  <div class="actions">
    <%= f.submit 'Make a Post' %>
    <%= link_to 'Nevermind', posts_path, class: 'button' %>
  </div>
<% end %>
